{
   "compilerOptions": {
      "target": "ES2019",
      "module": "ES2020",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "dist/esm",
      "rootDir": "src",
      "noEmitOnError": true,
      "strict": true,
      "noImplicitReturns": true,
      "noPropertyAccessFromIndexSignature": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "removeComments": true
   },
   "include": [
      "src/**/*"
   ]
}