{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2020",
      "outDir": "dist",
      "baseUrl": ".",
      "sourceMap": true,
      "rootDir": "src",
      "noEmitOnError": true,
      "strict": true,
      "noImplicitReturns": true,
      "noPropertyAccessFromIndexSignature": true,
      "types": [
         "node"
      ],
      "paths": {
         "@/*": [
            "src/*"
         ]
      },
      "skipLibCheck": true
   },
   "include": [
      "src/**/*"
   ]
}